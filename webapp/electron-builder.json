{
  "appId": "com.peacock.saveeditor",
  "productName": "Peacock Save Editor",
  "artifactName": "${productName}-${version}.${ext}",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "electron/**/*",
    ".next/**/*",
    "public/**/*",
    "package.json",
    "node_modules/**/*"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "public/icon-256.png",
    "artifactName": "Peacock_Save_Editor.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "artifactName": "Peacock_Setup.${ext}"
  },
  "portable": {
    "artifactName": "Peacock_Save_Editor.${ext}"
  },
  "mac": {
    "target": "dmg",
    "icon": "public/icon-256.png",
    "category": "public.app-category.utilities"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "public/icon-256.png",
    "category": "Utility"
  }
}
